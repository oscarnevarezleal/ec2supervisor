{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES5",
    "esModuleInterop": true,
    "removeComments": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "outDir": "./shared-utils",
    "sourceMap": false
  },
  "include": [
    "src-ts/*",
    "src-ts/utils/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}